<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="purchaseListViewModel"
            type="com.example.mylotto.main.viewmodel.PurchaseListViewModel" />
    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_task_item">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end|center_vertical">

                <ImageView
                    android:id="@+id/modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/test_24"
                    android:layout_marginEnd="25dp"
                    android:layout_gravity="end|center_vertical" />
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/delete_24"
                    android:layout_marginEnd="25dp"
                    android:layout_gravity="end|center_vertical"
                    />
            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:id="@+id/swipe_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@drawable/background_item">

            <TextView
                android:id="@+id/seq"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="회차" />

            <TextView
                android:id="@+id/number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.3"
                android:gravity="center"
                android:text="번호" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7"
                android:gravity="center"
                android:text="시간" />

            <ImageView
                android:id="@+id/check"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:src="@drawable/lotto_false" />

        </LinearLayout>

    </FrameLayout>
</layout>